type Blog @model<%=authDirective.blog%> {
  id: ID!
  name: String!
  posts: [Post] @connection(keyName: "byBlog", fields: ["id"])
}

type Post @model @key(name: "byBlog", fields: ["blogID"]) <%=authDirective.post%>{
  id: ID!
  title: String!
  blogID: ID!
  blog: Blog @connection(fields: ["blogID"])
  comments: [Comment] @connection(keyName: "byPost", fields: ["id"])
}

type Comment @model @key(name: "byPost", fields: ["postID", "content"]) <%=authDirective.comment%>{
  id: ID!
  postID: ID!
  post: Post @connection(fields: ["postID"])
  content: String!
}
